vrrp_instance VI_1 {
    state MASTER
    interface eth0
    virtual_router_id 51
    priority 100  # Prioridad más alta para el nodo principal
    advert_int 1  # Intervalo de anuncios VRRP
    authentication {
        auth_type PASS
        auth_pass 12345678
    }

    # Asignación de la IP Virtual (VIP)
    virtual_ipaddress {
        10.17.5.10  # IP Virtual compartida entre los nodos maestros
    }

    # Monitorizar el servicio HAProxy
    track_script {
        script "/sbin/pidof haproxy"  # Monitoriza si HAProxy está corriendo
        interval 2
    }
}

# Configuración para el nodo de respaldo (para otros Load Balancers)
vrrp_instance VI_2 {
    state BACKUP
    interface eth0
    virtual_router_id 51
    priority 90  # Menor prioridad para el nodo de respaldo
    advert_int 1
    authentication {
        auth_type PASS
        auth_pass 12345678
    }

    # Asignación de la IP Virtual (VIP)
    virtual_ipaddress {
        10.17.5.10  # IP Virtual compartida entre los nodos maestros
    }

    track_script {
        script "/sbin/pidof haproxy"  # Monitoriza si HAProxy está corriendo
        interval 2
    }
}