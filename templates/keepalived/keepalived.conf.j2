vrrp_instance VI_1 {
    state MASTER
    interface br0 # Adactador puente de la red Bridge
    virtual_router_id 51
    priority 100  # Prioridad m치s alta para el nodo principal
    advert_int 1  # Intervalo de anuncios VRRP
    authentication {
        auth_type PASS
        auth_pass 12345678
    }

    virtual_ipaddress {
        192.168.0.55  # IP Virtual compartida entre los nodos maestros
    }

    track_script {
        script "pidof haproxy"  # Monitoriza si HAProxy est치 corriendo
        interval 2
    }
}

