# -------------------------------
# Keepalived Configuration
# -------------------------------

# VRRP Instance for Kubernetes API (Port 6443)
vrrp_instance VI_API {
    state BACKUP
    interface {{ keepalived_interface }}
    virtual_router_id 51
    priority {{ keepalived_priority_api | default(100) }}
    advert_int 1
    authentication {
        auth_type PASS
        auth_pass 12345678
    }
    virtual_ipaddress {
        {{ api_vip }}  # e.g., 10.17.5.10
    }
    track_script {
        script "pidof haproxy"
        interval 2
    }
}

# VRRP Instance for Ingress Traffic (HTTP/HTTPS)
vrrp_instance VI_INGRESS {
    state BACKUP
    interface {{ keepalived_interface }}
    virtual_router_id 52
    priority {{ keepalived_priority_ingress | default(100) }}
    advert_int 1
    authentication {
        auth_type PASS
        auth_pass 12345678
    }
    virtual_ipaddress {
        {{ second_vip }}  # e.g., 10.17.5.30
    }
    track_script {
        script "pidof haproxy"
        interval 2
    }
}