vrrp_instance VI_API {
    state MASTER
    interface {{ keepalived_interface }}
    virtual_router_id 51
    priority 100
    advert_int 1
    authentication {
        auth_type PASS
        auth_pass 12345678
    }
    virtual_ipaddress {
        {{ api_vip }}  # 10.17.5.10
    }
    track_script {
        script "pidof haproxy"
        interval 2
    }
}

vrrp_instance VI_INGRESS {
    state BACKUP
    interface {{ keepalived_interface }}
    virtual_router_id 52
    priority 90
    advert_int 1
    authentication {
        auth_type PASS
        auth_pass 12345678
    }
    virtual_ipaddress {
        {{ second_vip }}  # 10.17.5.30
    }
    track_script {
        script "pidof haproxy"
        interval 2
    }
}